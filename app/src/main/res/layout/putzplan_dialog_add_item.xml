<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="298dp"
        android:layout_height="400dp">

        <TextView
            android:id="@+id/putzplan_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="24dp"
            android:layout_marginBottom="20dp"
            android:text="Zum Putzplan hinzufügen"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/putzplan_dialog_aufgaben_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/putzplan_dialog_title"
            android:layout_alignStart="@+id/putzplan_dialog_title"
            android:layout_below="@+id/putzplan_dialog_title"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:hint="Was soll geputzt werden?."
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/putzplan_dialog_start_putzer"
            android:layout_alignStart="@+id/putzplan_dialog_start_putzer"
            android:layout_margin="10dp"
            android:labelFor="@+id/putzplan_dialog_start_putzer"
            android:text="Wer soll anfangen zu putzen?" />

        <Spinner

            android:id="@+id/putzplan_dialog_start_putzer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/putzplan_dialog_aufgaben_name"
            android:layout_alignStart="@+id/putzplan_dialog_aufgaben_name"
            android:layout_below="@+id/putzplan_dialog_aufgaben_name"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/in_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_date"
            android:layout_alignEnd="@+id/putzplan_dialog_start_putzer"
            android:layout_alignStart="@+id/putzplan_dialog_aufgaben_name"
            android:layout_below="@+id/putzplan_dialog_start_putzer"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/btn_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/putzplan_dialog_start_putzer"
            android:fontFamily="sans-serif"
            android:text="Datum"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/haeufigkeit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/putzplan_dialog_aufgaben_name"
            android:layout_below="@+id/in_date"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="23dp"
            android:labelFor="@+id/putzplan_dialog_haeufigkeit"
            android:text="Wie oft soll geputzt werden?" />


        <SeekBar
            android:id="@+id/putzplan_dialog_haeufigkeit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/putzplan_dialog_btn"
            android:layout_alignParentStart="true"
            android:max = "3"
            android:thumbTint="@color/transparent"
            android:textAlignment="center"
            android:focusable="true"/>

        <TextView
            android:id="@+id/putzplan_dialog_haeufigkeit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="nie"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/haeufigkeit_label"
            android:layout_centerHorizontal="true"
            />


        <Button
            android:id="@+id/putzplan_dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/cardview_light_background"
            android:elevation="0dp"
            android:text="hinzufügen"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.v7.widget.CardView>