<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:card_view="http://schemas.android.com/tools"

android:id="@+id/haushaltsbuch_cardView"
android:layout_width="match_parent"
android:layout_height="match_parent">

<android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="6dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/haushaltsbuch_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Name oder/und Bild"
            android:layout_centerVertical="true"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/haushaltsbuch_list_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="+25â‚¬"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:textColor="@color/haushaltsbuch_plus_money"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>



</RelativeLayout>