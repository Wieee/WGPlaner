<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:clickable="true"
android:focusable="true"
android:orientation="vertical"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/haushaltsbuch_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="24dp"
        android:layout_marginBottom="20dp"
        android:text="Neue Ausgabe hinzufügen"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/haushaltsbuch_dialog_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/haushaltsbuch_dialog_title"
        android:layout_margin="24dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        android:hint="Was möchtest du hinzufügen?"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/haushaltsbuch_dialog_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_below="@id/haushaltsbuch_dialog_product_name"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Wie viel hat es gekostet?"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/haushaltsbuch_dialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_below="@id/haushaltsbuch_dialog_amount"
        android:ems="10"
        android:inputType="date"
        android:hint="Wann hast du es gekauft?"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/haushaltsbuch_dialog_for_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_below="@id/haushaltsbuch_dialog_date"
        android:ems="10"
        android:hint="Für wen hast du es alles gekauft?"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/einkaufszettel_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/haushaltsbuch_dialog_for_users"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@color/cardview_light_background"
        android:elevation="0dp"
        android:text="hinzufügen"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />


</RelativeLayout>

</android.support.v7.widget.CardView>